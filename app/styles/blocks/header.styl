.header
  padding 30px 0
  position fixed
  top 0
  left 0
  right 0
  z-index 25
  color #fefefe
  font-family Road
  font-size 14px
  font-weight 400
  transition 0.3s all
  &.colored
    background black
    padding 14px 0

  &-logo
    img
      max-width 175px
      width 100%
      +to-width(460px)
        max-width 160px

  &__wrap
    display flex
    justify-content space-between
    align-items center

  &-nav
    display flex
    +to-width(1024px)
      position fixed
      top 0
      right 0
      bottom 0
      width 320px
      background #000
      flex-direction column
      padding 40px
      padding-top 140px
      transform translateX(100%)
      transition 0.5s transform
      &.open
        transform translateX(0)


    &__item
      margin-right 40px
      text-transform uppercase
      &:last-child
        margin-right 0

      +to-width(1200px)
        margin-right 30px

      +to-width(1024px)
        margin-bottom 15px
        font-size 20px

  &-contacts
    +to-width(1024px)
      display none

  &-gamburger
  		display none
  		position relative
  		z-index 6
  		+to-width(1024px)
  			display block
  			width 32px
  			height 18px

  		&__item
  			width 100%
  			height 3px
  			border-radius 3px
  			background-color white
  			position absolute
  			t()
  			&:first-child
  				margin-top 0
  			&:nth-child(2)
  				top 7px
  			&:last-child
  				top 14px

  		&:hover
  			.header-gamburger__item
  				background-color #AB191A


  a
    color #fefefe
    transition 0.3s all
    &:hover
      color #d0191a


.header-gamburger_close
		.header-gamburger__item
			&:last-child
        opacity 0
			&:first-child
        transform rotate(45deg)
        top 6px
        left 0
			&:nth-child(2)
        transform rotate(-45deg)
        top 6px
        left 0
