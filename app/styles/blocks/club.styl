.club
    // background-image url('../images/club-bg.png')
    // background-size 200%
    // background-repeat no-repeat
    // background-position bottom center
    padding-bottom 230px
    padding-bottom 430px
    padding-top 150px
    padding-top 0px
    margin-top -150px
    z-index 8
    overflow hidden
    position relative
    +to-width(1400px)
      background-size 300%
    +to-width(1200px)
      padding-bottom 220px
    +to-width(850px)
      background-size 500%
    +to-width(600px)
      background-size cover
    +to-width(520px)
      padding-top 50px
      padding-bottom 200px

    &-container
      background-image linear-gradient(-176deg, #ffffff 0%, #ffffff 46%, #828282 100%)
      position absolute
      left 50%
      transform translateX(-50%)
      top 0
      right 0
      bottom 0




    &__title
      font-size 101px
      text-align center
      +to-width(850px)
      	font-size 76px
      +to-width(520px)
      	font-size 56px
      +to-width(520px)
      	font-size 42px

    &-body
      display flex
      flex-wrap wrap
      margin-left -55px
      margin-right -55px
      +to-width(1600px)
        margin-left 0
        margin-right 0

    &-list
      font-size 16px
      font-family October
      color #000000
      +to-width(540px)
        font-size 14px

      &-prompt
        opacity 0
        position absolute
        padding 25px 14px
        background-color #eeeeee
        box-shadow 0 6px 12px 1px rgba(69, 60, 60, 0.16)
        right -100%
        top 0
        max-width 260px
        transition 0.3s all
        pointer-events none
        z-index 10

      &__item
        margin-top 15px
        color #000000
        line-height 21.75px
        padding-left 35px
        position relative
        z-index 1
        &:before
          content '01'
          position absolute
          left 0
          top 0px
          color #000000
          font-size 18px
          font-family Road
          font-weight 700

        &:hover
          .club-list-prompt
            opacity 1
            pointer-events all



        a
          color black
          border-bottom 1px dashed black
          position relative

        &:nth-child(2)
          &:before
            content '02'
        &:nth-child(3)
          &:before
            content '03'
        &:nth-child(4)
          &:before
            content '04'
        &:nth-child(5)
          &:before
            content '05'
        &:nth-child(6)
          &:before
            content '06'

    &-item
      width 25%
      margin-top 100px
      padding 0 12px
      position relative
      &:nth-child(1)
        z-index 5
      &:nth-child(2)
        z-index 4
      &:nth-child(3)
        z-index 3
      &:nth-child(4)
        z-index 2
        .club-list-prompt
          top -180px
          right -40%
      +to-width(1200px)
        width 50%
        display flex
        justify-content center
        margin-top 40px
        .club-list-prompt
          top -180px
          right 0%!important

      +to-width(640px)
        width 100%

      &.disabled
        pointer-events none
        &:before
          content 'Скоро в продаже'
          position absolute
          top 110px
          left 0
          right 0
          color white
          z-index 5
          font-size 20px
          text-align center
          font-family Road

        .club-item__container
          filter blur(3px)

      &__container
        padding 25px 40px
        padding-bottom 55px
        height 743px
        position relative
        transition 0.3s all
        display flex
        flex-direction column
        justify-content space-between
        transition 0.3s all
        max-width 380px
        &:after
          content ''
          position absolute
          background-color #eeeeee
          box-shadow 0 6px 12px 1px rgba(69, 60, 60, 0.16)
          left 0
          top 0
          right 0
          bottom 0
          transition 0.3s all

        +to-width(1350px)
          padding 25px
          padding-bottom 55px

        +to-width(640px)
          height auto

        +to-width(420px)
          margin-left -37px
          margin-right -37px
          width auto


        &:hover
          &:after
            top -37px
            bottom -32px


      &__image
        margin-left -20px
        margin-right -20px
        height 186px
        background-size cover
        background-position top center
        +to-width(1350px)
          margin-left -5px
          margin-right -5px


      &__title
        color #0d0606
        font-size 30px
        font-weight 700
        font-family Road
        padding-bottom 5px
        margin-top 40px

      &__text
        font-size 14px
        line-height 16px
        color #000000
        font-family October
        padding-bottom 30px

      &__left
        width 50%
        position relative
        z-index 2
        +to-width(540px)
          width 100%

      &__right
        width 50%
        position relative
        display flex
        flex-direction column
        justify-content flex-end
        z-index 2
        +to-width(540px)
          width 100%

      &__price
        font-size 24px
        color #000000
        font-family Road
        padding-bottom 14px

      &__button
        color #000000
        font-size 18px
        font-weight 700
        font-family Road
        padding 14px 0
        height 48px
        width 100%
        text-align center
        display block
        border 1px solid #1f1f1f
        transition 0.3s all
        &:hover
          background-color #c3151a
          border 1px solid #c3151a
          color white

      &__top
        position relative
        z-index 2

      &__bottom
        position relative
        z-index 2
        +to-width(640px)
          margin-top 40px

    .welcome-start
      margin-top 270px
      +to-width(640px)
      	margin-top 100px
